 <script type="text/javascript">

     function ConvertAmount(amount) {


         //  alert(amount);
         x = parseFloat(amount).toFixed(2).split('');
         //  alert(x);
         let ii = x.length - 3
         while ((ii -= 3) > 0) {
             x.splice(ii, 0, ',')
         }

         x.value = x.join('');

         return x.value;
         // document.getElementById("LoansAmount").value = x.value;

     }
 </script>