
@{
    ViewBag.Title = "CreateUser";
    //Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    Layout = "~/Views/Shared/_LayoutDashboardinnerpage.cshtml";
}
<script type="text/javascript">
$(document).ready(function() {
$('table td:nth-child(6)').each(function() {
    //alert('test');
  let $this = $(this);

  // make sure it's a number
  if (!isNaN($this.text())) {

    if (+$this.text() > 20)
	{

	    var pieces = parseFloat($this.text()).toFixed(2).split('')
        let ii = pieces.length - 3
        while ((ii -= 3) > 0) {
            pieces.splice(ii, 0, ',')
        }
        $this.text(pieces.join(''));

    }
	else
	{
      $this.css('color', 'red');
    }
  }

});
});
</script>
<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">
            <!--<h4 class="title">Create User</h4>-->
            <!-- Mega Form Starts -->
            @if (TempData["Error"] != "")
            {
                <div id="Msgs" class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }
            @if (TempData["SucMsg"] != "")
            {
                <div id="Msgs" class="alert alert-success">
                    @TempData["SucMsg"]
                </div>
            }
            <section class="section-padding contact-us-padding form-padding">

                <div class="tables">
                    <h2 class="title1">REFERRED APPLICANT</h2>
                    <div class="table-responsive bs-example widget-shadow">
                        @*<h4>Users:</h4>*@
                        @{int i = 0;}
                        <table id="myTable" class="table table-bordered">
                            <thead>
                                <tr>
                                  
                                    <th>NO</th>
                                    <th>REFERRAL CODE</th>
                                    <th>LOAN REF-NUMBER</th>
                                    <th>STATE CODE</th>
                                    <th>NAME</th>
                                    <th>LOAN AMOUNT</th>
                                    <th>LOAN TENURE</th>
                                    <th>NYSC STATE</th>
                                    <th>NYSC LGA</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.Data == null)
                                {
                                    <h2>No Record Found</h2>
                                }
                                else
                                {
                                    foreach (var Loan in ViewBag.Data)
                                    {
                                        <tr>
                                            <td scope="row">@(++i)</td>
                                           
                                            <td>@Loan.ReferralCode</td>
                                            <td>@Loan.LoanRefNumber</td>

                                            <td>@Loan.StateCode</td>
                                            <td>@Loan.Firstname @Loan.Surname</td>
                                            <td>@Loan.LoanAmount</td>
                                            <td>@Loan.LoanTenure</td>
                                            <td>@Loan.NyscStateofResidence</td>
                                            <td>@Loan.NyscLGAs</td>

                                            @*<td>
                                                <a href="@Url.Action("ReferredApplicants", "AdminA", new { Refid = @Loan.MyReferralCode })">View</a>
                                            </td>*@
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>


            <!-- // Mega Form Ends-->

        </div>

    </div>
</div>
<script type="text/javascript">
    function ConvertAmount(amount) {


        //  alert(amount);
        x = parseFloat(amount).toFixed(2).split('');
        //  alert(x);
        let ii = x.length - 3
        while ((ii -= 3) > 0) {
            x.splice(ii, 0, ',')
        }

        x.value = x.join('');

        return x.value;
        // document.getElementById("LoansAmount").value = x.value;

    }
</script>
