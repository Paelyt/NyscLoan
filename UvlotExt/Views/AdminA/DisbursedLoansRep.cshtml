                                            <td>@Loan.TotalAmountGivenOut</td>
                                            <td>@Loan.NumberOfActiveLoan</td>
                                            
                                            @*<td>
                                                    <a href="@Url.Action("ApprovalTimess", "AdminA", new { Refid = @Loan.ID })">View KPI</a>
                                                </td>*@
                                        </tr>
                                    }
